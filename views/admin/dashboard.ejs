<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  
  <title>GlowSpace - Admin</title>
  <link rel="icon" type="image/x-icon" href="./images/tab.png">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
  <link rel="stylesheet" href="/css/admin.css">
  
  <script src="/js/admin.js"></script>

</head>
<body>
    <div class="container1">
        <%- include('../partials/adminHeader') %>
        <div class="container2">
            <h3>Available Services</h3>
            
            <div class="services">
                <a href="/events/add-service" class="add-btn" ><i class="bi bi-plus"></i></a>
                <% var services = salon.services %>
                <% if (services && services.length > 0) { %>
                    <% services.forEach(function(service) { %>
                        <div class="service-card">
                            <div class="service-content">
                                <p><strong>Name:</strong> <%= service.serviceName %></p>
                                <p><strong>Price:</strong> <%= service.servicePrice %> sr</p>
                            </div>
                            <div class="service-actions">     
                                <a href="/events/edit-service/<%= service._id %>" class="edit-btn"> <i class="bi bi-pen"> </i>Edit</a>
                                
                                <a href="/events/delete-service/<%= service._id %>"class="delete-btn"> <i class="bi bi-pen"> </i>Delete</a>
                            </div>
                        </div>
                    <% }); %>
                <% } else { %>
                    <p>No services added yet. Add some!</p>
                <% } %>
                
            </div>

            
        </div>
       
    </div>
    
    <%- include('../partials/footer') %>

    
   
</body>


</html>
