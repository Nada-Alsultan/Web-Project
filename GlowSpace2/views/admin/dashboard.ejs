<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  
  <title>GlowSpace - Admin</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
  <link rel="stylesheet" href="/css/admin.css">
  
  <script src="/js/admin.js"></script>

</head>
<body>
    <div class="container1">
        <%- include('../partials/adminHeader') %>
        <div class="container2">
            <h3>Available Services</h3>
            
            <div class="services">
                <a href="/events/add-service" class="add-btn" ><i class="bi bi-plus"></i></a>
                <% var services = salon.services %>
                <% if (services && services.length > 0) { %>
                    <% services.forEach(function(service) { %>
                        <div class="service-card">
                            <div class="service-content">
                                <p><strong>Name:</strong> <%= service.serviceName %></p>
                                <p><strong>Price:</strong> $<%= service.servicePrice %></p>
                            </div>
                            <div class="service-actions">     
                                <a href="/events/edit-service/<%= service._id %>" class="edit-btn"> <i class="bi bi-pen"> </i>Edit</a>
                                
                                <button onclick="deleteService('<%= service._id %>')" class="delete-btn"> <i class="bi bi-pen"> </i>Delete</button>
                            </div>
                        </div>
                    <% }); %>
                <% } else { %>
                    <p>No services added yet. Add some!</p>
                <% } %>
                
            </div>
            <h3>Working Schedule</h3>
         
<div class="schedule">
    <% if (salon.schedule && salon.schedule.length > 0) { %>
        <table>
            <thead>
                <tr>
                    <th>Day</th>
                    <th>Open Time</th>
                    <th>Close Time</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% salon.schedule.forEach(function(slot) { %>
                    <tr>
                        <td><%= slot.day %></td>
                        <td><%= slot.openTime %></td>
                        <td><%= slot.closeTime %></td>
                        <td>
                            <button onclick="editSchedule('<%= slot._id %>')" class="edit-btn">Edit</button>
                            <button onclick="deleteSchedule('<%= slot._id %>')" class="delete-btn">Delete</button>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    <% } else { %>
        <p>No schedule slots added yet.</p>
        <button onclick="addScheduleSlot()" class="add-btn">Add Schedule Slot</button>
    <% } %>
</div>

            
        </div>
       
    </div>
    
    <%- include('../partials/footer') %>

    
   
</body>
